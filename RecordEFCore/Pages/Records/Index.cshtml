@page
@model RecordEFCore.Pages.Records.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].Artist.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].Recorded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Record[0].Media)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Record)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Artist.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Recorded)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    (@Html.DisplayFor(modelItem => item.Media))
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.RecordId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.RecordId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.RecordId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
